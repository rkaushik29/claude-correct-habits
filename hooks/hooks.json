{
	"hooks": {
		"SessionStart": [
			{
				"matcher": "all",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": "all",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/analyze-corrections.js"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "all",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/capture-response.js"
					}
				]
			}
		]
	}
}
