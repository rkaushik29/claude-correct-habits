{
	"name": "correct-habits",
	"version": "1.0.0",
	"description": "Claude learns from corrections and remembers your coding preferences.",
	"author": {
		"name": "kaurohit"
	},
	"homepage": "https://github.com/rkaushik29/claude-correct-habits",
	"keywords": [
		"claude-code",
		"claude-plugin",
		"claude-code-plugin",
		"correct-habits",
		"habits",
		"patterns",
		"learning",
		"corrections",
		"preferences",
		"memory",
		"code-style",
		"developer-tools"
	],
	"hooks": {
		"SessionStart": [
			{
				"matcher": "all",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": "all",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/analyze-corrections.js"
					}
				]
			}
		]
	}
}